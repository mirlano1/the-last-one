body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    color: #333;
    padding: 20px;
    text-align: center;
}

.container {
    max-width: 600px;
    margin: auto;
    padding: 20px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

h1 {
    color: #333;
}

p {
    font-size: 18px;
}

.color-button {
    border: none;
    color: white;
    padding: 15px 20px;
    margin: 10px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.color-button:hover {
    opacity: 0.8;
}

#thankYouMessage {
    display: none;
    margin-top: 20px;
    color: green;
}
